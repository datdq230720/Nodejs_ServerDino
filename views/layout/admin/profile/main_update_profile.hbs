    const google = () => {
    window.location.href = `/auth/admin/google`

    const updatePassword = (id) => {
    window.location.href = `/user/${id}/forgot-password`
}

const checkPassword = (id) => {
    window.location.href = `/user/check-password`
}
}
  </script>