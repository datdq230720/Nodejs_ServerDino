  var all_spc = document.querySelectorAll("form[id='222315134987458'] .si" + "mple" + "_spc");
for (var i = 0; i < all_spc.length; i++)
{
  all_spc[i].value = "222315134987458-222315134987458";
}
  </script>
</form>