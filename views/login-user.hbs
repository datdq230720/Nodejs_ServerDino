<div class="body_login">
    <div class="title_logo">
        <img src="/images/4.png" />
    </div>
    <form method="post" name="contactForm" onsubmit="return validateForm()" action="/login-user">
        <div class="header_login">
            <h1>Login</h1>
            <hr>
            <label for="username"><b></b></label>
            <input type="text" placeholder="Nhập tên đăng nhập" name="username" id="username">
            <label for="password"><b></b></label>
            <input type="password" placeholder="Nhập mật khẩu" name="password" id="password">
            <p style="width: 70%; font-size:12px; text-align: left;
            color: red; font-family: Arial, Helvetica, sans-serif;margin-bottom: 10px;">
                {{messages}}{{login}}{{sendMail}}</p>
            <hr>
            <button type="submit" class="submit submit_dn">Login</button>
            <div class="line">
                <hr>
                <p style="margin: 0 10px 0 10px;">or</p>
                <hr>
            </div>
            <a class="a" href="/register-user">Register</a>
            <div class="fogot"><a href="/check-user">Forgot password?</a></div>
        </div>
    </form>

</div>


<script>

    function validateForm() {

        var username = document.forms["contactForm"]["username"].value;
        // var fname = document.getElementById("fname").value;
        var password = document.forms["contactForm"]["password"].value;
        // var sname = document.getElementById("sname").value;

        if (username == null || username == "") {
            alert("The login box cannot be left blank");
            return false;
        } else if (password == null || password == "") {
            alert("The register box cannot be left blank");
            return false;
        }
    }
</script>